        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@color/color_e7e7e7"
        app:layout_constraintBottom_toBottomOf="@+id/productDetailBrandItemProductAdapter_productLeftConstraintLayout"
        app:layout_constraintEnd_toStartOf="@+id/productDetailBrandItemProductAdapter_productRightConstraintLayout"
        app:layout_constraintStart_toEndOf="@+id/productDetailBrandItemProductAdapter_productLeftConstraintLayout"
        app:layout_constraintTop_toTopOf="@+id/productDetailBrandItemProductAdapter_productLeftConstraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/productDetailBrandItemProductAdapter_productRightConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productDetailBrandItemProductAdapter_productLeftConstraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/productDetailBrandItemProductAdapter_productRightImageView"
            android:layout_width="@dimen/dp_104"
            android:layout_height="@dimen/dp_104"
            android:layout_marginStart="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

