            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_14"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_ff8181"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/productDetailBrandItemProductAdapter_originalPriceRightTextView"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productDetailBrandItemProductAdapter_productRightTextView"
            tools:text="$97" />

        <TextView
            android:id="@+id/productDetailBrandItemProductAdapter_originalPriceRightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_14"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_b9b9b9"
            android:textSize="@dimen/sp_12"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/productDetailBrandItemProductAdapter_addCartRightImageView"
            app:layout_constraintStart_toEndOf="@+id/productDetailBrandItemProductAdapter_priceRightTextView"
            tools:text="$97" />

        <TextView
            android:id="@+id/productDetailBrandItemProductAdapter_unitRightTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/productDetailBrandItemProductAdapter_promotionNameRightTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/productDetailBrandItemProductAdapter_promotionNameRightTextView"
